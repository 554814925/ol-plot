<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 xmlns:components="components.*" xmlns:ns="http://www.esri.com/2008/ags">
	<fx:Script>
		<![CDATA[
			import com.esri.ags.Map;
			
			import gispace.tools.MeasureTool;
			import gispace.tools.ScreenCapTool;
			
			public var map:Map;
			
			private var screenCapTool:ScreenCapTool;
			private var measureTool:MeasureTool;
			
			private function shotScreen():void{
				if(map == null)
					return;
				if(this.screenCapTool == null){
					this.screenCapTool = new ScreenCapTool(this.map);
					this.screenCapTool.toolbarMinBottom = 40;
					this.screenCapTool.toolbarMinTop = 70;
				}
				this.screenCapTool.activate();
			}
			
			private function measureLength():void{
				if(this.measureTool == null){
					this.measureTool = new MeasureTool(this.map);
				}
				this.measureTool.measureLength();
			}
			
			private function measureArea():void{
				if(this.measureTool == null){
					this.measureTool = new MeasureTool(this.map);
				}
				this.measureTool.measureArea();
			}
			
			private function clearMeasure():void{
				if(this.measureTool)
					this.measureTool.clear();
			}
			
		]]>
	</fx:Script>
	<s:Rect width="100%" height="100%">
		<s:fill>
			<s:SolidColor alpha="0.7" color="0x555555"/>
		</s:fill>
	</s:Rect>
	<s:VGroup paddingBottom="10" paddingLeft="5" paddingRight="5" paddingTop="10">
		<components:CircleButton click="shotScreen()" imageSource="assets/screenshot.png"
								 toolTip="截屏"/>
		<components:CircleButton click="measureLength()" imageSource="assets/length.png" toolTip="测距离"/>
		<components:CircleButton click="measureArea()" imageSource="assets/area.png" toolTip="测面积"/>
		<components:CircleButton click="clearMeasure()" imageSource="assets/clear.png" toolTip="清除测量结果"/>
	</s:VGroup>
</s:Group>
