<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		  xmlns:s="library://ns.adobe.com/flex/spark"
		  xmlns:mx="library://ns.adobe.com/flex/mx"
		  width="500" height="280">
	<fx:Script>
		<![CDATA[
			import mx.managers.PopUpManager;
			
			private function close():void{
				PopUpManager.removePopUp(this);
			}
			
			private function goToBlog():void{
				navigateToURL(new URLRequest("http://blog.csdn.net/gispace"), "_blank");
			}
			
		]]>
	</fx:Script>
	<s:Rect width="100%" height="100%">
		<s:fill>
			<s:SolidColor alpha="0.7" color="0x555555"/>
		</s:fill>
	</s:Rect>
	<s:VGroup width="100%" height="100%" paddingBottom="10" paddingLeft="10" paddingRight="10" paddingTop="10" >
		<s:HGroup width="100%">
			<s:Label height="24" fontSize="18" fontWeight="bold" text="关于..." verticalAlign="middle" width="100%"/>
			<s:Image right="0" top="0" buttonMode="true" click="close()" source="assets/close.png"
					 toolTip="关闭" useHandCursor="true"/>
		</s:HGroup>
		<s:VGroup paddingTop="10" gap="10">
			<s:Label width="480" fontSize="15" lineHeight="24" text="        GISpace动态标绘API，基于ArcGIS Flex API实现，支持最新版本。当前版本1.4.3，支持常用标绘符号的绘制、编辑、保存与打开（序列化与反序列化）、文本标注。此API免费使用，希望为有标绘需求的项目带来帮助。欢迎交流反馈。"/>
			<s:HGroup verticalAlign="middle" paddingTop="10" gap="20" paddingLeft="20">
				<s:Image source="assets/pencil.png" width="60" height="60" smooth="true"/>
				<s:VGroup gap="10">
					<s:Label fontSize="15" lineHeight="24" text="作者：@平凡的世界"/>
					<s:Label fontSize="15" lineHeight="24" text="Q Q：21587252"/>
					<s:Label fontSize="15" lineHeight="24" text="交流QQ群：318659439"/>
					<s:Label fontSize="15" lineHeight="24" text="博客：http://blog.csdn.net/gispace" useHandCursor="true" buttonMode="true" click="goToBlog()" toolTip="点击进入博客"/>
				</s:VGroup>
			</s:HGroup>
		</s:VGroup>
	</s:VGroup>
</s:Group>
